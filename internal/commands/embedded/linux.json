{
  "category": "linux",
  "commands": [
    {
      "template": "systemctl status SERVICE",
      "description": "Check status of a service",
      "tags": ["systemctl", "status", "service"]
    },
    {
      "template": "systemctl start SERVICE",
      "description": "Start a service",
      "tags": ["systemctl", "start", "service"]
    },
    {
      "template": "systemctl stop SERVICE",
      "description": "Stop a service",
      "tags": ["systemctl", "stop", "service"]
    },
    {
      "template": "systemctl restart SERVICE",
      "description": "Restart a service",
      "tags": ["systemctl", "restart", "service"]
    },
    {
      "template": "systemctl enable SERVICE",
      "description": "Enable service to start on boot",
      "tags": ["systemctl", "enable", "boot"]
    },
    {
      "template": "systemctl disable SERVICE",
      "description": "Disable service from starting on boot",
      "tags": ["systemctl", "disable", "boot"]
    },
    {
      "template": "systemctl list-units --type=service",
      "description": "List all services",
      "tags": ["systemctl", "list", "services"]
    },
    {
