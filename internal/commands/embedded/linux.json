      "description": "Follow logs for a service",
      "tags": ["journalctl", "logs", "follow"]
    },
    {
      "template": "journalctl -u SERVICE --since today",
      "description": "View today's logs for a service",
      "tags": ["journalctl", "logs", "today"]
    },
    {
      "template": "iptables -L -n -v",
      "description": "List all firewall rules (verbose)",
      "tags": ["iptables", "firewall", "list"]
    },
    {
      "template": "iptables -A INPUT -p tcp --dport PORT -j ACCEPT",
      "description": "Allow incoming traffic on port",
      "tags": ["iptables", "allow", "port"]
    },
    {
      "template": "iptables -A INPUT -s IP -j DROP",
      "description": "Block traffic from IP address",
      "tags": ["iptables", "block", "ip"]
    },
    {
      "template": "iptables -D INPUT RULE_NUMBER",
      "description": "Delete a firewall rule by number",
      "tags": ["iptables", "delete", "rule"]
    },
    {
      "template": "iptables-save > /etc/iptables/rules.v4",
      "description": "Save iptables rules",
      "tags": ["iptables", "save", "persist"]
    },
    {
