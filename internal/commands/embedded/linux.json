      "tags": ["ufw", "status", "firewall"]
    },
    {
      "template": "ufw enable",
      "description": "Enable UFW firewall",
      "tags": ["ufw", "enable", "firewall"]
    },
    {
      "template": "ufw disable",
      "description": "Disable UFW firewall",
      "tags": ["ufw", "disable", "firewall"]
    },
    {
      "template": "ufw allow PORT",
      "description": "Allow incoming traffic on port",
      "tags": ["ufw", "allow", "port"]
    },
    {
      "template": "ufw allow PORT/tcp",
